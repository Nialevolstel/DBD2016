<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :rut_gestor %><br />
    <%= f.text_field :rut_gestor, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :primer_nombre %><br />
    <%= f.text_field :primer_nombre, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :segundo_nombre %><br />
    <%= f.text_field :segundo_nombre, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :apellido_paterno %><br />
    <%= f.text_field :apellido_paterno, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :apellido_materno %><br />
    <%= f.text_field :apellido_materno, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :sexo %><br />
    <%= f.select :sexo, [["Masculino", :m],["Femenino",:f]] %>
  </div>

  <div class="field">
    <%= f.label :telefono_fijo %><br />
    <%= f.text_field :telefono_fijo, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :telefono_movil %><br />
    <%= f.text_field :telefono_movil, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
